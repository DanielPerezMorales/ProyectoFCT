<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:orientation="vertical"
    tools:context=".ui.view.Activity.ForgotPasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginTop="30sp"
        android:src="@drawable/ic_logo_iberdrola_cli" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="100sp"
        android:hint="@string/hint_ForgotPassword"
        />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="140sp"
        android:backgroundTint="@color/color_consumo"
        android:text="@string/enviar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="300sp"
            android:layout_height="1dp"
            app:dividerColor="@color/gris"
            android:layout_gravity="center"
            android:layout_marginVertical="22dp" />

        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/gris"
            android:background="@color/white"
            android:text="@string/si_ya_te_has_acordado" />
    </FrameLayout>

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_disenio"
        android:textColor="@color/color_consumo"
        android:text="@string/ir_al_inicio_de_sesi_n" />

</LinearLayout>