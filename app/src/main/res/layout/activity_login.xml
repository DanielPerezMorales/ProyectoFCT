<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.view.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hack"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_marginTop="30sp"
            android:src="@drawable/ic_logo_iberdrola_cli" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140sp"
            android:hint="@string/usuario"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contrase_a"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ojo_informacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/transparente"
                android:src="@drawable/ojo" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chckBX"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/recordar_contrase_a" />

            <ImageButton
                android:id="@+id/fingerprint"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/white"
                android:src="@drawable/baseline_fingerprint_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_recuperarDatos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5"
                android:text="@string/he_olvidado_mis_datos"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/jetpack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/jetpack_24" />

        </LinearLayout>


        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130sp"
            android:backgroundTint="@color/color_consumo"
            android:text="@string/entrar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginVertical="22dp"
                app:dividerColor="@color/gris" />

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/tambi_n_puedes"
                android:textColor="@color/gris" />
        </FrameLayout>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="250dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:background="@drawable/boton_disenio"
            android:text="@string/registrarte"
            android:textColor="@color/color_consumo" />
    </LinearLayout>
</LinearLayout>